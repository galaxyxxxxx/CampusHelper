.lightMode{
  color: #fff;
}
.darkMode{
  color: var(--color-theme);
}
.darkMode .desc{
  color: var(--color-tips);
}
.darkMode .footer{
  color: var(--color-tips);
}
.box{
  width: 92vw;
  height: 50vh;
  box-sizing: border-box;
  margin: 8vw auto;
  padding: 6vw;
  border-radius: 32rpx;
  background-repeat: no-repeat;
  box-shadow: 0 4vw 8vw rgba(0,0,0,0.12);

  display: flex;
  flex-direction: column;
  justify-content: space-between;

  transition: transform 0.4s ease-in-out;
}

.box:active{
  transform: scale(0.96);
}

.box:first-of-type{
  margin-top: 4vw;
}

.desc{
  font-weight: 480;
}

.desc, .footer{
  opacity: 0.8;
}

.title{
  font-size: 1.8rem;
  letter-spacing: 1rpx;
  font-weight: 560;
}

.footer{
  font-size: smaller;
  
}
.footer text{
  backdrop-filter: blur(8rpx);
}
